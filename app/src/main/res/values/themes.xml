<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MagicRunes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/bottom_nav_style</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MagicRunes.Chip.Choice</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MagicRunes.Launcher">
        <item name="android:windowBackground">@drawable/splash_xml</item>
    </style>

    <style name="bottom_nav_style">
        <item name="itemIconTint">@color/bottom_nav_color_state</item>
        <item name="itemTextColor">@color/bottom_nav_color_state</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="fab_style" parent="Theme.MagicRunes">
        <item name="layout_anchorGravity">top|end</item>
        <item name="android:layout_margin">@dimen/margin_25</item>
    </style>

    <style name="dialog_title_text_style">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_edit_text_style">
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">8</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="main_fragment_title_rune_text">
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:shadowColor">@color/black_800</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="main_fragment_description_rune_text">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black_850</item>
    </style>

    <style name="avrev_name_rune_text">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_600</item>
    </style>

    <style name="ThemeOverlay.MagicRunes.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="chip_style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipSurfaceColor">@color/chip_background_color_state</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="item_info_title_text_style">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_fortune_title_text_style">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_fortune_description_text_style">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white_alpha_CC</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_fortune_date_text_style">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white_alpha_CC</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="text_current_fortune_button">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.MagicRunes">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ThemeOverlay.MagicRunes.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>
    <style name="title_dialog_fortune_description_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="title_dialog_fortune_count_date_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>